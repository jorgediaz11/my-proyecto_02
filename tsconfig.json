{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true, // Habilita la interoperabilidad con m√≥dulos CommonJS
    "allowSyntheticDefaultImports": true, // Recomendado para trabajar con importaciones predeterminadas
    "experimentalDecorators": true,
    "outDir": "./dist/out-tsc",
    "lib": ["ES2022", "dom"]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/main.server.ts",
    "server.ts"
  ]
}